@model Zoom3Web.Models.Contact

@{
    ViewBag.Title = "Contacto";
}

<h2>Contacto</h2>

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-horizontal well">
        <h4>Contacto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Consulta", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("QueryType", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mensaje", new { @class = "col-md-2 control-label" })
            <div class="col-md-10 textbox">
                    @Html.TextBoxFor(model => model.ContactMessage, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContactMessage, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-info" />
            </div>
        </div>
    </div>
}
