@model Zoom3Web.Models.UserDataViewModel

@{
    ViewBag.Title = "Registro";
}

<h2>Crear Nueva Cuenta en Zoom3</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>Registro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-2 control-label", @placeholder = "Email" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.US_Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.US_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nombre", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.US_Name, new { @class = "form-control", @placeholder = "Nombre Usuario" })
                @Html.ValidationMessageFor(model => model.US_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Apellido", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.US_LastName, new { @class = "form-control", @placeholder = "Apellido" })
                @Html.ValidationMessageFor(model => model.US_LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Contraseña", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.US_Password, new { @class = "form-control", @placeholder = "Contraseña" })
                @Html.ValidationMessageFor(model => model.US_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Confirmar Contraseña", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.US_ConfirmPassword, new { @class = "form-control", @placeholder = "Repetir Contraseña" })
                @Html.ValidationMessageFor(model => model.US_ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input id="CheckboxAcept" type="checkbox" />
                    @*@Html.Label("Acepto las <a>condiciones de uso</a> y la <a>pol&iacute;tica de privacidad</a>.")*@
                    <p>Acepto las <a>condiciones de uso</a> y la <a>pol&iacute;tica de privacidad</a>.</p>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-info" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
