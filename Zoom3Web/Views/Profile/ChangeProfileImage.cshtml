@model Zoom3Web.UserData

@{
    ViewBag.Title = "Editar Perfil";
}
@Html.Partial("_ProfileMenu")
<div class="form-horizontal">
    @using (Html.BeginForm("ChangeProfileImage", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.US_ImageProfile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="US_ImageProfile" id="US_ImageProfile" style="width: 100%;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Volver", "ProfileInfo", "", new { @class="btn btn-default"})
                <input type="submit" value="Subir" class="btn btn-info" />
            </div>
        </div>

    }
    
</div>